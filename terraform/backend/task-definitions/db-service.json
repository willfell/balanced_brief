[
    {
        "runtimePlatform": {
            "cpuArchitecture": "ARM64",
            "operatingSystemFamily": "LINUX"
        },    
        "name": "${NAME}",
        "image": "${IMAGE}",
        "portMappings": [
            {
                "containerPort": 5432,
                "hostPort": 5432,
                "protocol": "tcp"
            }
        ],
        "essential": true,
        "entryPoint": ["sh", "init.sh"],
        "environment": [
            {
                "name": "ENV",
                "value": "${ENV}"
            },
            {
                "name": "EXECUTION_LOCATION",
                "value": "${EXECUTION_LOCATION}"
            }
        ],
        "mountPoints": [],
        "ReadonlyRootFilesystem": false,
        "privileged": false,
        "InitProcessEnabled": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${LOGGROUP}",
                "awslogs-region": "${REGION}",
                "awslogs-stream-prefix": "${LOGPREFIX}"
            }
        }
    }
]