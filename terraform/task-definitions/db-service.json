[
    {
        "runtimePlatform": {
            "cpuArchitecture": "ARM64",
            "operatingSystemFamily": "LINUX"
        },    
        "name": "${NAME}",
        "image": "${IMAGE}",
        "portMappings": [
            {
                "containerPort": 5432,
                "hostPort": 5432,
                "protocol": "tcp"
            }
        ],
        "essential": true,
        "entryPoint": ["sh", "init.sh"],
        "environment": [
            {
                "name": "REDDITCLIENTID",
                "value": "${REDDITCLIENTID}"
            },
            {
                "name": "REDDITCLIENTSECRET",
                "value": "${REDDITCLIENTSECRET}"
            },
            {
                "name": "REDDITAGENT",
                "value": "${REDDITAGENT}"
            },
            {
                "name": "OPENAI_KEY",
                "value": "${OPENAI_KEY}"
            },
            {
                "name": "DB_PASS",
                "value": "${DB_PASS}"
            },
            {
                "name": "DB_HOST",
                "value": "${DB_HOST}"
            },
            {
                "name": "ENV",
                "value": "${ENV}"
            }
        ],
        "mountPoints": [],
        "ReadonlyRootFilesystem": false,
        "privileged": false,
        "InitProcessEnabled": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "${LOGGROUP}",
                "awslogs-region": "${REGION}",
                "awslogs-stream-prefix": "${LOGPREFIX}"
            }
        }
    }
]